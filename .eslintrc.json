{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended",
    "airbnb"
  ],
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "module-resolver"
  ],
  "rules": {
    "comma-dangle": ["error", "always"],
    "module-resolver/use-alias": 2
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
